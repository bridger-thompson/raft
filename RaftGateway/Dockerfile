FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /source

COPY ["RaftGateway/RaftGateway.csproj", "RaftGateway/"]
RUN dotnet restore "RaftGateway/RaftGateway.csproj"

COPY . .
WORKDIR /source/RaftGateway
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "RaftGateway.dll"]